# Runtime
APP_ENV=production
API_PORT=8000
LOG_LEVEL=INFO
CORS_ORIGINS=*

# Proxy / TLS
GREENMIND_DOMAIN=localhost
CADDY_TLS_MODE=internal
PROXY_HTTP_PORT=80
PROXY_HTTPS_PORT=443

# Database
POSTGRES_DB=greenmind
POSTGRES_USER=greenmind
POSTGRES_PASSWORD=change-me-db-password

# JWT Auth
JWT_SECRET_KEY=change-me-jwt-secret-min-32-chars-long-xxxx
JWT_ACCESS_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Default admin (seeded on first start)
ADMIN_EMAIL=admin@greenmind.local
ADMIN_PASSWORD=change-me-admin-password

# Ingestion auth (gateway bearer token)
INGEST_TOKEN=change-me-ingest-token

# S3 / MinIO
S3_PROVIDER=minio
S3_ENDPOINT=http://minio:9000
S3_REGION=eu-central-1
S3_BUCKET=greenmind-exports
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=change-me-minio-root-password
S3_SECURE=false

# MinIO root credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-minio-root-password

# Timescale features
ENABLE_CONTINUOUS_AGGREGATES=true

# Monitoring (optional profile)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-grafana-password
