# Copy this file to .env before running docker compose.
# Use strong credentials and secrets in production.

POSTGRES_USER=plantuser
POSTGRES_PASSWORD=change-this-strong-db-password
POSTGRES_DB=plantdb
POSTGRES_PORT=5432

BACKEND_PORT=8000
FRONTEND_PORT=3000

# Comma-separated list of allowed frontend origins.
CORS_ORIGINS=http://localhost:3000

# Must be at least 32 chars.
JWT_SECRET_KEY=replace-this-with-a-long-random-secret-at-least-32-chars
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080
